{
    "configurations": [
        {
            "name": "api: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/api",
            "env": {
                "FLASK_APP": "app:create_app('dev')",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debugger",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}